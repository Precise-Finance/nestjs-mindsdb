{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "sourceMap": false,
    "allowJs": false,
    "rootDir": "./src",
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "include": [
    "*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "./dist/**/*",
    "node_modules",
    "./**/*.spec.ts"
  ]
}
